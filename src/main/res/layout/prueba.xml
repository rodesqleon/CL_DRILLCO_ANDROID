<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_marginRight="44dp"
            android:layout_column="0"
            android:padding="55dip"
            android:layout_width="25dp"
            android:id="@+id/btnback"
            android:background="@android:drawable/ic_menu_revert"
            android:layout_height="25dp"
            android:backgroundTint="#6C1F73"
            style="@style/Widget.AppCompat.Button" />


        <TextView
            android:layout_column="1"
            android:id="@+id/detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="22dip"
            android:text="Detalle:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="21sp"
            android:textAlignment="center" />

        <TextView
            android:layout_gravity="top"
            android:layout_column="2"
            android:padding="3dip"
            android:text=""
            android:id="@+id/txtorden" />


    </TableRow>


    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Nombre:"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:id="@+id/txtname" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Rut:"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:id="@+id/rut" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Moneda:"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:id="@+id/moneda" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Fecha deseada:"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:id="@+id/fecha" />
    </TableRow>

    <TableRow android:background="#FBC02D"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Producto"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:text="Cantidad"
            android:textColor="@android:color/black"
            android:id="@+id/textView4" />

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="Total"
            android:textColor="@android:color/black" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_column="0"
            android:padding="3dip"
            android:text=""
            android:id="@+id/lstproducto"
            android:layout_height="200dp"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            style="@android:style/Widget.DeviceDefault.ExpandableListView" />

        <ListView
            android:layout_column="1"
            android:padding="3dip"
            android:text=""
            android:id="@+id/lstcantidad"
            android:layout_height="200dp"
            android:dividerHeight="1dp" />

        <ListView
            android:layout_column="2"
            android:padding="3dip"
            android:text=""
            android:id="@+id/lsttotal"
            android:layout_height="200dp"
            android:dividerHeight="1dp" />


    </TableRow>


    <TableRow>

        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:text="Total:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:textColor="#6C1F73" />

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text=""
            android:id="@+id/txttotalfinal" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <Button
            android:layout_column="0"
            android:id="@+id/btncancelar"
            android:background="@android:drawable/ic_delete"
            style="@style/Widget.AppCompat.Button"
            android:layout_height="35dp"
            android:layout_width="25dp" />

        <Button
            android:layout_column="2"
            android:id="@+id/btnaprobar"
            android:background="@drawable/acep"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="15dp"
            android:layout_height="35dp" />
    </TableRow>

</TableLayout>