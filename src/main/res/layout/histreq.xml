<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:stretchColumns="10">


    <TextView
        android:text="Detalle."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtdetalle"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/btnback"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="N° requisición:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numerorequi"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="14sp"
        android:layout_below="@+id/txtdetalle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lstdetalle"
        android:scrollbars="horizontal|vertical"
        android:text="Fecha:"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/producto"
        android:layout_alignLeft="@+id/producto"
        android:layout_alignStart="@+id/producto" />

    <TextView
        android:id="@+id/txtorden"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="14sp"
        android:maxLines="1"
        android:maxLength="5"
        android:ellipsize="end"
        android:layout_alignBaseline="@+id/numerorequi"
        android:layout_alignBottom="@+id/numerorequi"
        android:layout_alignLeft="@+id/txtdetalle"
        android:layout_alignStart="@+id/txtdetalle"
        android:layout_height="30dp"
        android:layout_width="55dp" />

    <TextView
        android:text="Producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/producto"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:layout_below="@+id/txtorden"
        android:layout_alignLeft="@+id/numerorequi"
        android:layout_alignStart="@+id/numerorequi" />

</RelativeLayout>